RUN ./configure --with-native-compilation
RUN make -j `nproc` bootstrap \
      BYTE_COMPILE_EXTRA_FLAGS='--eval "(setq comp-speed 1)"'

FROM emacs-native-comp as emacs-native-comp-speed2

COPY . /checkout
